@{
    ViewBag.Title = "Index";
}

<h2>Kayıtlar</h2>

@Html.ActionLink("Yeni Kayıt","yeniKayit",null,new { @class="btn btn-primary"}) <br />

<table class="table">
    <tr>
        <td>KN</td>
        <td>Adı Soyadı</td>
        <td>E-Posta</td>
        <td>Yaş</td>
        <td>Düzenle</td>
        <td>Sil</td>
    </tr>
    @foreach (var kayit in Model)
    {
    <tr>
        <td>@kayit.kayId</td>
        <td>@kayit.adsoyad</td>
        <td>@kayit.mail</td>
        <td>@kayit.yas</td>
        <td>@Html.ActionLink("Düzenle", "kayitDuzenle", new { id = kayit.kayId }, new { @class = "btn btn-warning" })</td>
        <td>@Html.ActionLink("Sil", "kayitSil", new { id = kayit.kayId }, new { @class = "btn btn-danger" })</td>


    </tr>
    }
</table>